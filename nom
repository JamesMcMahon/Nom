import os
import commands
import cli
from store import MockStore
from index import FileIndex

class Config:
	nomDir = "nom-test" #FIXME should be $HOME/.nom
	storeDir = os.path.join(nomDir, "store")
	indexName = "index"

	def __init__(self):
			# XXX both of these constructors are responsible for creating 
			# files and directories if they don't exists, 
			# might want to rethink this
			self.store = MockStore(self)
			self.index = FileIndex(self)

# in the future this might load a config
# but for now, just use the constants
cfg = Config()
cli.dispatch(cfg)
